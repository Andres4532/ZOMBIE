using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Destruir2 : MonoBehaviour
{
    private void OnTriggerEnter(Collider other)
    {
        Thirst thirstScript = other.GetComponent<Thirst>();
        if (thirstScript != null)
        {
            thirstScript.IncreaseThirstOnDestroy();
        }

        Destroy(gameObject);
    }

    void Start()
    {

    }

    void Update()
    {

    }
}
