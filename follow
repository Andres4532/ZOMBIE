using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class FollowPlayer : MonoBehaviour
{
    public Transform player; // Referencia al objeto del jugador
    public Vector3 offset = new Vector3(0, 2, -5); // Ajusta el desplazamiento de la cámara según tus necesidades
    public float smoothSpeed = 5.0f; // Velocidad de suavizado

    void LateUpdate()
    {
        if (player == null)
        {
            return; // Asegurarse de que haya una referencia válida al jugador
        }

        // Calcula la posición deseada de la cámara
        Vector3 desiredPosition = player.position + offset;

        // Interpola suavemente la posición actual de la cámara hacia la posición deseada
        Vector3 smoothedPosition = Vector3.Lerp(transform.position, desiredPosition, smoothSpeed * Time.deltaTime);

        // Establece la posición de la cámara al resultado suavizado
        transform.position = smoothedPosition;

        // Hace que la cámara mire al jugador
        transform.LookAt(player);
    }
}
