using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Destruir : MonoBehaviour
{
    private void OnTriggerEnter(Collider other)
    {
        HungerThirst hungerThirstScript = other.GetComponent<HungerThirst>();
        if (hungerThirstScript != null)
        {
            hungerThirstScript.IncreaseHungerOnDestroy();
        }

        Destroy(gameObject);
    }

    void Start()
    {

    }

    void Update()
    {

    }
}
